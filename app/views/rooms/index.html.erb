<h2>登録済み施設一覧</h2>
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>施設紹介</th>
      <th>料金</th>
      <th>作成日</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.image? %>
            <%= image_tag  room.image.url %>
          <% else %>
            <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png' %>
          <% end %>
        </td>                    
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.introduction %></td>
        <td><%= room.fee %></td>
        <td><%= room.updated_at %></td>
        <td><%= link_to "詳細" , room_path(room) %></td>
        <td><%= link_to "編集" , edit_room_path(room) %></td>
        <td><%= link_to "削除" , room_path(room), method: :delete , data: {comfirm: "本当に削除しますか？" }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

